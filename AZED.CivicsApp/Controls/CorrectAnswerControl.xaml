<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AZED.CivicsApp.Controls.CorrectAnswerControl">
  <ContentView.Content>
      <StackLayout Orientation="Horizontal">
            <Image Source="AnswerCorrect.png" 
                   WidthRequest="16" HeightRequest="16" 
                   Aspect="AspectFit" 
                   VerticalOptions="Start" />
            <Label Text="{Binding AdeAnswer}"
                   Style="{StaticResource labelReviewAnswerText}"/>
            <Label Text="{Binding CorrectAnswerText}"
                   Style="{StaticResource labelReviewAnswerText}"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>