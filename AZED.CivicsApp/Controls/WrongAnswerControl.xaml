<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AZED.CivicsApp.Controls.WrongAnswerControl">
  <ContentView.Content>
      <StackLayout Orientation="Horizontal" >
            <Image 
                Source="AnswerWrong.png" 
                WidthRequest="16" HeightRequest="16" 
                Aspect="AspectFit" 
                VerticalOptions="Start" />
            <Label Text="{Binding GivenAnswer}"
                   Style="{StaticResource labelReviewAnswerText}"
                   />
            <Label Text="{Binding GivenAnswerText}"
                   Style="{StaticResource labelReviewWrongAnswerText}"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>