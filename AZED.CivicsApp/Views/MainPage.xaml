             xmlns:control="clr-namespace:AZED.CivicsApp.Controls"
             x:Class="AZED.CivicsApp.Views.MainPage"
             Title="{Binding AppTitle}">


    <ContentPage.Padding>
       <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0,8,0,0" />
            <On Platform="Android, WinPhone, Windows" Value="0" />
        </OnPlatform>
    </ContentPage.Padding>
        
        
        <StackLayout
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
        <Grid x:Name="masterGrid"
              Padding="0"
              RowSpacing="0"
              ColumnSpacing="0" >

            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="5*" />
                </Grid.RowDefinitions>

            <Frame
                    HasShadow="false" 
                    Padding="0"
                    Grid.Row="0"
                    CornerRadius="0"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">

               <Grid x:Name="titleGrid"
                    Padding="0"
                    RowSpacing="0"
                    ColumnSpacing="0" >   

                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                        
                    <Image
                        Source="AZflag"
                        Aspect="AspectFill"
                        Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3"/>

                     <Label
                            Text="Civics"
                            Style="{StaticResource appTitleStyle}"
                            Grid.Row="1" Grid.Column="0"/>

                     <Label
                            Text="Test"
                            Style="{StaticResource appTitleStyle}"
                            Grid.Row="2" Grid.Column="0"/>

                     <Label
                            Text="Study"
                            Style="{StaticResource appTitleStyle}"
                            Grid.Row="1" Grid.Column="2"/>

                     <Label
                            Text="App"
                            Style="{StaticResource appTitleStyle}"
                            Grid.Row="2" Grid.Column="2"/>

                     <Label
                            Text="AZ"
                            Style="{StaticResource appTitleStyle}"
                            FontSize="36"
                            Grid.Row="2" Grid.Column="1"/>
                        
                </Grid>
            </Frame>



                
